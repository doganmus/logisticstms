# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Logging Configuration
LOG_LEVEL=debug

