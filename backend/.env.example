# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=tmsuser
DB_PASSWORD=tmspassword
DB_DATABASE=tmsdb

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-secret-key-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=change-this-to-a-secure-refresh-secret-key-in-production
